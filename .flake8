[flake8]
format = ${cyan}%(path)s${reset}:${yellow_bold}%(row)d${reset}:${green_bold}%(col)d${reset}: ${red_bold}%(code)s${reset} %(text)s
max-line-length = 120
htmldir = flake_html
count = True
max-complexity = 15
ignore = W503,D100,D401
exclude =
    __init__.py
    *.css
    *.csv
    *.js
    *.less
    *.md
    *.png
    *.po
    *.scss
    *.txt
    *.xml
    *.yml
    *.rst
    *.html
    .flake8
    .coveragerc
    Dockerfile
    .gitignore
    .eslint/*
    MODEL*
